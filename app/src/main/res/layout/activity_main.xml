<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.samarthan.shubham.samarthan.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/jobSeekerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#B3E5FC"
        android:gravity="center"
        android:padding="20dp"
        android:onClick="jobSeekerLogin"
        android:textAllCaps="false"
        android:text="Need a job ?"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#000000"
         android:layout_weight="1"
         android:layout_marginLeft="70dp"
         android:layout_marginRight="30dp"
         android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="OR" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:background="#000000"
            android:layout_weight="1"
            android:layout_gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/employerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#B3E5FC"
        android:gravity="center"
        android:padding="20dp"
        android:textAllCaps="false"
        android:text="Want to hire ?"
        android:onClick="employerLogin"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>
